@model LojaInfo.Models.Funcionario

@{
    ViewBag.Title = "Editar";
}
<div class="animated animatedFadeInUp fadeInUp">
    <h2>Editar</h2>
    <br /><br /><br />
    <div class="abacaxi1">
        <div class="margem" style="width:500px">
            <br /><br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="abacaxi1">
                    <div class="form-horizontal">
                        <h4>Funcionário</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.CodFunc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CodFunc, new { htmlAttributes = new { @class = "caixinhas", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.CodFunc, "", new { @class = "aviso" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NomeFunc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NomeFunc, new { htmlAttributes = new { @class = "caixinhas" } }) <br />
                                @Html.ValidationMessageFor(model => model.NomeFunc, "", new { @class = "aviso" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TelFunc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TelFunc, new { htmlAttributes = new { @class = "caixinhas" } }) <br />
                                @Html.ValidationMessageFor(model => model.TelFunc, "", new { @class = "aviso" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StatusFunc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.StatusFunc, new { htmlAttributes = new { @class = "caixinhas" } }) <br />
                                @Html.ValidationMessageFor(model => model.StatusFunc, "", new { @class = "aviso" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Editar" class="button1" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Voltar", "Index")
            </div>
            <div>
                @ViewBag.msg
            </div>
        </div>
    </div>
</div>