@model LojaInfo.Models.Venda

@{
    ViewBag.Title = "EditStatus";
}

<h2>EditStatus</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Venda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CodVenda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>@ViewBag.cod</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("status", null, "Selecione o status da venda", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
