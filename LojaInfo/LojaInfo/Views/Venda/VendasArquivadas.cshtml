@model IEnumerable<LojaInfo.Models.Venda>

@{
    ViewBag.Title = "Index";
}

<h2>Vendas arquivadas</h2>
<p>
    @Html.ActionLink("Vendas ativas", "Index") 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeFunc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusVenda)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFunc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusVenda)
            </td>
            <td>
                @Html.ActionLink("Recuperar", "Recuperar", new { id = item.CodVenda }) |
                @if (Session["tipoLogado1"] != null)
                {
                    @Html.ActionLink("Excluir", "Delete", new { id = item.CodVenda }, new { onclick = "return confirm('Deseja realmente excluir?');" })
                }
            </td>
        </tr>
    }

</table>
